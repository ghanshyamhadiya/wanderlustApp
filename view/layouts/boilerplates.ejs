            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script src="/js/script.js"></script>
            <script>
                const menuvertical = document.querySelector(".menu-icon")
                const popup_menu = document.querySelector(".vertical")
                const menuclose = document.querySelector(".close")


                // JavaScript
                document.addEventListener('DOMContentLoaded', () => {
                    const messages = document.querySelectorAll('.message-container');

                    messages.forEach(message => {
                        // Show message with animation
                        setTimeout(() => {
                            message.classList.add('show');
                            message.querySelector('.flash-message').style.animation = 'slideIn 0.5s ease-out';
                        }, 100);

                        // Hide and remove message after 6 seconds
                        setTimeout(() => {
                            message.classList.remove('show');
                            message.style.opacity = '0';

                            setTimeout(() => {
                                message.remove();
                            }, 500); // Match this with the transition duration
                        }, 6000);
                    });
                });



                // Get the button and dropdown content
                const button = document.getElementById("dropdownButton");
                const dropdown = document.getElementById("dropdownContent");

                // Toggle dropdown visibility when clicking the button
                button.addEventListener("click", function (event) {
                    event.preventDefault(); // Prevent default button behavior
                    event.stopPropagation(); // Stop the click from bubbling up unnecessarily
                    dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
                });

                // Close the dropdown if clicking outside
                document.addEventListener("click", function (event) {
                    if (!button.contains(event.target) && !dropdown.contains(event.target)) {
                        dropdown.style.display = "none";
                    }
                });


                let popup = "ON"

                menuvertical.addEventListener("click", () => {
                    if (popup == "ON") {
                        // alert("popup is modified in OFF")
                        popup = "OFF"
                        // console.log(popup);
                        popup_menu.style.top = "0"
                    }
                })

                menuclose.addEventListener("click", () => {
                    if (popup == "OFF") {
                        // alert("popup is modified at ON")
                        popup = "ON"
                        // console.log(popup);
                        popup_menu.style.top = "-100%"
                    }
                })


            </script>
            <script src="/javascript/script.js"></script>
            <script src="/javascript/password.js"></script>
            
</body>

