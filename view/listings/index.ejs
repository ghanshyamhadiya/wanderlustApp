<% layout("/layouts/boilerplates") %>
    <div class="container mt-5">
        <div class="tax-switch-container">
            <div class="form-check form-switch tax-toggle">
                <input class="form-check-input custom-switch" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Include Taxes</label>
            </div>
            <div class="price-filter">
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle filter-btn" type="button" id="priceFilter"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Filter by Price
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="priceFilter">
                        <li><a class="dropdown-item" href="#" data-min="0" data-max="1000">₹0 - ₹1000</a></li>
                        <li><a class="dropdown-item" href="#" data-min="1000" data-max="2000">₹1000 - ₹2000</a></li>
                        <li><a class="dropdown-item" href="#" data-min="2000" data-max="3500">₹2000 - ₹3500</a></li>
                        <li><a class="dropdown-item" href="#" data-min="3500" data-max="">₹3500+</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" data-min="" data-max="">Clear Filter</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center my-4">
            <h3 class="mb-0">Big, small, we have it all</h3>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% for (let listing of allListing) { %>
                <div class="col listing-item" data-price="<%= listing.price %>">
                    <a href="/listing/<%= listing.id %>" class="text-decoration-none">
                        <div class="card h-100 shadow-sm collapse-card"
                            onmouseover="this.style.boxShadow='0 .5rem 1rem rgba(0,0,0,.15)'"
                            onmouseout="this.style.boxShadow='0 .125rem .25rem rgba(0,0,0,.075)'">
                            <div class="image-container position-relative">
                                <img src="<%= listing.image.url %>" class="card-img-top img-fluid"
                                    alt="<%= listing.title %>" style="height: 20rem; object-fit: cover;">
                                <div class="card-img-overlay d-flex align-items-end p-3"
                                    style="opacity: 0; transition: opacity 0.3s ease;"
                                    onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0'">
                                    <span class="badge bg-dark bg-opacity-75">
                                        View Details
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-dark mb-2">
                                    <strong>
                                        <%= listing.title %>
                                    </strong>
                                </h5>
                                <p class="card-text text-muted mb-2">
                                    <%= listing.description?.substring(0, 50) %>...
                                </p>
                                <p class="price text-success fw-bold mb-0" data-original-price="<%= listing.price %>"
                                    style="font-size: 1.1rem;">
                                    ₹ <%= listing.price.toLocaleString("en-in") %> / Night
                                </p>
                                <p class="tax-info text-muted mt-1" style="visibility: hidden; font-size: 0.9rem;">
                                    Includes 18% tax
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div>
